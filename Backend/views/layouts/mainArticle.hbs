{{!-- layout(общий шаблон для страниц), до того, как вошли в аккаунт--}}
{{> head}}

<body>
{{> navbar}}

    <section class="main">
        <h2 class="second_desc">{{title}}</h2>
        {{{body}}}

        

    </section>

    <div class="signup_window_hidden">
        <!-- <div class="window_title">

        </div> -->
        <div class="flex_win">
            <div class="win_signin">Вход</div>
            <div class="win_signup">Регистрация</div>
        </div>
        
        <form class="signin_form" action="/auth/signin" method="post">
            <div class="log">
                <input type="text" name="login" placeholder="Логин">                
            </div>
            <div class="pas">
                <input type="password" name="password" placeholder="Пароль">
            </div>
            <button class="btn_signin">Войти</button>
        </form>

        <form class="signup_form" action="/auth/signup" method="post" hidden>
            <div class="log">
                
                <input type="text" name="login" placeholder="Логин">                
            </div>
            <div class="mail">

                <input type="text" name="email" placeholder="Электронная почта">                
            </div>
            <div class="pas">

                <input type="password" name="password" placeholder="Пароль">
            </div>
            <button class="btn_signin">Зарегистрироваться</button>
        </form>

    </div>


    
    <script src="./script.js"></script>
    

    
    
    

</body>
</html>